{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Calendar Schema",
  "type": "object",
  "required": ["lines", "begin", "events"],
  "additionalProperties": true,
  "properties": {
    "lines": {
      "type": "array",
      "items": {
        "$ref": "#/$defs/line"
      }
    },
    "begin": { "$ref": "#/$defs/date-string" },
    "events": {
      "type": "array",
      "items": { "$ref": "#/$defs/event" }
    }
  },
  "$defs": {
    "date-string": {
      "type": "string",
      "pattern": "^\\d{4}-\\d{2}-\\d{2}$"
    },
    "color": {
      "type": "string",
      "pattern": "^#[0-9a-fA-F]{6}$"
    },
    "event": {
      "type": "object",
      "required": ["title", "description", "date"],
      "additionalProperties": false,
      "properties": {
        "title": { "type": "string" },
        "description": { "type": "array", "items": { "type": "string" } },
        "date": { "$ref": "#/$defs/date-string" }
      }
    },
    "span": {
      "type": "object",
      "required": ["from", "to"],
      "additionalProperties": false,
      "properties": {
        "from": { "$ref": "#/$defs/date-string" },
        "to": {
          "anyOf": [{ "$ref": "#/$defs/date-string" }, { "type": "null" }]
        }
      }
    },
    "block": {
      "type": "object",
      "required": ["span", "color", "events"],
      "additionalProperties": false,
      "properties": {
        "span": { "$ref": "#/$defs/span" },
        "color": { "$ref": "#/$defs/color" },
        "events": {
          "type": "array",
          "items": { "$ref": "#/$defs/event" }
        }
      }
    },
    "line": {
      "type": "object",
      "required": ["blocks"],
      "additionalProperties": false,
      "properties": {
        "blocks": {
          "type": "array",
          "items": { "$ref": "#/$defs/block" }
        }
      }
    }
  }
}
